<h1>Add a task</h1>

<%= form_for @task, url: create_path(id: @task_lists.id) do |f| %>

  <% if @task.errors.any? %>
    <div class="errors">
      <p>Your task could not be created</p>
    </div>
  <% end %>


  <p>Description</p>
  <div>

    <%= f.text_field :description, autofocus: true %>
  </div>
  <div>
    <%= f.date_select :date, prefix: :date %>
  </div>
  <div>
    <%= f.hidden_field :list_id %>
  </div>
  <div>
    <%= f.submit "Create task" %>
  </div>
<% end %>


